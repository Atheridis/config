[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
pin-workspaces = true

; Create scroll handler used to cycle workspaces
enable-scroll = false

format = "<label-state><label-mode>%{B#3c81c0}"
format-background = ${colors.center}
format-padding = 14

strip-wsnumbers = true
name-sort = true

label-mode = "%{T-}%mode%%{T-}"
label-mode-background = ${colors.bgmode}
label-mode-foreground = ${colors.fgmode}
label-mode-padding = 4

label-focused = "%{T81}%name%%{T-}"
label-focused-background = ${colors.bgfocused}
label-focused-foreground = ${colors.fgfocused}
label-focused-underline = ${colors.linefocused}
label-focused-padding = 4

label-visible = "%{T81}%name%%{T-}"
label-visible-background = ${colors.bgvisible}
label-visible-foreground = ${colors.fgvisible}
label-visible-underline = ${colors.linevisible}
label-visible-padding = 4

label-unfocused = "%{T81}%name%%{T-}"
label-unfocused-background = ${colors.bgunfocused}
label-unfocused-foreground = ${colors.fgunfocused}
label-unfocused-padding = 4

label-urgent = "%{T81}%name%%{T-}"
label-urgent-background = ${colors.bgurgent}
label-urgent-foreground = ${colors.fgurgent}
label-urgent-padding = 4


; vim:ft=dosini
