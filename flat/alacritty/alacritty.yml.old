# Space Duck
colors:
  # Default colors
  primary:
    background: '#101540'
    foreground: '#d0ffff'
  # Normal colors
  normal:
    black:   '#303030'
    red:     '#a03030'
    green:   '#30a030'
    yellow:  '#a0a030'
    blue:    '#3030a0'
    magenta: '#a030a0'
    cyan:    '#30a0a0'
    white:   '#a0a0a0'

  # Bright colors
  bright:
    black:   '#454545'
    red:     '#f04545'
    green:   '#45f045'
    yellow:  '#f0f045'
    blue:    '#4545f0'
    magenta: '#f045f0'
    cyan:    '#45f0f0'
    white:   '#f0f0f0'


background_opacity: 1

font:
  normal:
    family: "Fira Mono for Powerline"
    style: Medium
  bold:
    family: "Fira Mono for Powerline"
    style: Bold
  italic:
    family: "Fira Mono for Powerline"
    style: italic
  bold_italic:
    family: "Fira Mono for Powerline"
    style: Regular

  # Point size
  size: 14

  offset:
    x: 0
    y: 0
  glyph_offset:
    x: 0
    y: 0

window:
  padding:
    x: 6
    y: 6

scrolling:
  # Maximum number of lines in the scrollback buffer.
  # Specifying '0' will disable scrolling.
  history: 10000

  # Number of lines the viewport will move for every line scrolled when
  # scrollback is enabled (history > 0).
  multiplier: 10

# If `true`, bold text is drawn using the bright color variants.
draw_bold_text_with_bright_colors: true

selection:
  semantic_escape_chars: ',â”‚`|:"'' ()[]{}<>'
  save_to_clipboard: false

live_config_reload: true

key_bindings:
  - { key: N, mods: Control, action: SpawnNewInstance }
